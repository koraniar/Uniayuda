@model List<Uniayuda.Models.PostViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@foreach (Uniayuda.Models.PostViewModel post in Model)
{
<dl class="dl-horizontal">
    <dt>
        @Html.DisplayNameFor(x => post.Title)
    </dt>

    <dd>
        @Html.ActionLink(post.Title, "Details", "Post", new { postId = post.Id }, null)
    </dd>

    <dt>
        @Html.DisplayNameFor(x => post.Url)
    </dt>

    <dd>
        @Html.DisplayFor(x => post.Url)
    </dd>

    <dt>
        @Html.DisplayNameFor(x => post.Comment)
    </dt>

    <dd>
        @Html.DisplayFor(x => post.Comment)
    </dd>

    <dt>
        @Html.DisplayNameFor(x => post.CreatedDate)
    </dt>

    <dd>
        @Html.DisplayFor(x => post.CreatedDate)
    </dd>

    <dt>
        @Html.DisplayNameFor(x => post.EditedDate)
    </dt>

    <dd>
        @Html.DisplayFor(x => post.EditedDate)
    </dd>

</dl>
}